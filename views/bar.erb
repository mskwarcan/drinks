<% if @bars.empty? %>
<div class="bg">
	<p>Get started by creating your first bar <a href="/new">here.</a> After creating a bar, please fill in the hours, cover, drink specials, and any upcoming events you may have coming up.</p>
</div>
<% else %>
<div class="results">
	<% @bars.each_with_index do |bar,i| %>
		<div class="bar mybar">
			<p class="noMargin links">
				<a href="/edit/<%= bar.id %>">Edit Bar</a><br />
				<a href="/details/<%= bar.id %>">Edit Hours/Cover</a><br />
				<a href="/special/<%= bar.id %>">Edit Drink Specials</a><br />
				<a href="/events/<%= bar.id %>">Add an Event</a><br />
				<a href="javascript:confirmDelete('/delete/<%= @bar.id %>')">Delete Bar</a>
			</p>
			<h3><a href="/show/<%= bar.id %>"><%=bar.name %></a></h3>
			<p class="noMargin">
			<a href="/show/<%= bar.id %>">View Bar</a>
			</p>
		</div>
	<% end %>
</div>
<% end %>