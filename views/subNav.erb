<div class="subnav">

<% if @bar && !@new == true%>
<h3><%= @bar.name %></h3>
	<p>
		<a href="/show/<%= @bar.id %>">View Bar</a><br />
		<a href="/edit/<%= @bar.id %>">Edit Bar</a><br />
		<a href="/details/<%= @bar.id %>">Edit Hours/Cover</a><br />
		<a href="/special/<%= @bar.id %>">Edit Specials</a><br />
		<a href="/events/<%= @bar.id %>">Add an Event</a><br />
		<a href="javascript:confirmDelete('/delete/<%= @bar.id %>')">Delete Bar</a><br />
	</p>
<% end %>
 <% @bars = Bar.all(:order => [:name.asc], :person_id => session[:user]) %>
<% if !@bars.empty? %>
<h3>My Bars</h3>
	<p>
		<% @bars.each_with_index do |bar,i| %>
			<a href="/show/<%= bar.id %>"><%=bar.name %></a><br />
		<% end %>
		<br /><a href="/new">Create a New Bar</a>
	</p>
<% end %>
</div>